<resources >
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/aeroBlue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonTextNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FilledButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/ButtonTextNormal</item>
        <item name="android:fontFamily">@font/museosans300</item>
        <item name="backgroundTint">@color/button_color</item>
    </style>

    <style name="HeadlineTextGiantBase">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/museosans700</item>
    </style>

    <style name="HeadlineTextLargeBase">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/museosans500</item>
    </style>

    <style name="HeadlineTextMediumBase">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/museosans500</item>
    </style>

    <style name="HeadlineTextMediumBlack" parent="HeadlineTextMediumBase">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeadlineTextLargeBlack" parent="HeadlineTextLargeBase">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeadlineTextGiantBlack" parent="HeadlineTextGiantBase">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeadlineTextMediumWhite" parent="HeadlineTextMediumBase">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyTextDark">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">@font/museosans500</item>
    </style>

    <style name="BodyTextDarkSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">@font/museosans500</item>
    </style>

    <style name="HintTextGrey">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/hintGray</item>
        <item name="android:fontFamily">@font/museosans300</item>
    </style>

    <style name="LinkTextAeroBlue">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/aeroBlue</item>
        <item name="android:fontFamily">@font/museosans500</item>
    </style>

    <style name="dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/FilledButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/FilledButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/FilledButton</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="CreateAccountTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fillColor">@color/gray_box_fill</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:colorFocusedHighlight">@color/transparent</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlHighlight">@color/aeroBlue</item>
        <item name="colorControlActivated">@color/aeroBlue</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">@color/hintGray</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/gray_box_fill_light</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textColorHint">@color/transparent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigation" parent="">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/hintGray</item>
        <item name="itemTextColor">@color/hintGray</item>
    </style>

</resources>